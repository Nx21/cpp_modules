CC = c++
CFLAGS = -Wall -Werror -Wextra -std=c++98
SRC = AForm.cpp PresidentialPardonForm.cpp ShrubberyCreationForm.cpp\
	Bureaucrat.cpp RobotomyRequestForm.cpp main.cpp
INC = AForm.hpp Bureaucrat.hpp PresidentialPardonForm.hpp RobotomyRequestForm.hpp\
	ShrubberyCreationForm.hpp
OBJ = $(SRC:.cpp=.o)
NAME = Bureaucrat
all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $^ -o $@

%.o:%.cpp $(INC)
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -rf $(OBJ)

fclean: clean
	rm -rf $(NAME)

re: fclean all

.PHONY : re fclean clean all